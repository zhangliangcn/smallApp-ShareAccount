/* components/zl-product-group/zl-product-group.wxss */
.container {
  display: flex;
  width: 236.66rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  justify-content: center;
}
.box{
  margin:10rpx 0;
  display: flex;
  flex-direction: column;
  width: 216rpx;
  background: white;
  border-radius: 10rpx;
  border: solid 2rpx #d3d3d3;
}
.img-prouct{
  width: 216rpx;
  height: 216rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.price{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 50rpx;
  font-size: 30rpx;
  text-decoration:  line-through;
  color: #5d5d5d;

}
.btn-kan{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.img-btn-kan{
  width: 180rpx;
  height: 60rpx;
}

