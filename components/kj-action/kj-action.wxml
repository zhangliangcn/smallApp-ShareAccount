<view class="custom-class container"> 
<!-- 发起人砍价页面 -->
<view class="action-body" wx:if="{{role==1}}">
  <block wx:if="{{title_status===0}}">
    <view class="title">
      最低<text class="redfont">  0  </text>元拿，先自己<text class="redfont"> 砍一下 </text>吧 ~
    </view>
 </block>
 <block wx:if="{{title_status===1}}">
